package org.nokia.opta.solver
    dialect "java"

import org.optaplanner.core.api.score.buildin.hardsoft.HardSoftScoreHolder;

import org.nokia.opta.FrequencyPlanner;
import org.nokia.opta.Band;
import org.nokia.opta.TRX;

global HardSoftScoreHolder scoreHolder;

// ############################################################################
// Hard constraints
// ############################################################################

rule "badNeighbours"
    when
        $trx_unu : TRX()
        exists TRX($trx_unu.frequency == frequency, $trx_unu.id != id)
    then
        scoreHolder.addHardConstraintMatch(kcontext, -10);
end

rule "badFrequency"
	when
		exists TRX(not band.hasFreq(frequency))
	then
		scoreHolder.addHardConstraintMatch(kcontext, -1000);
end
